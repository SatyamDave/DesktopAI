{
  "name": "doppel",
  "version": "1.0.0",
  "description": "A Smart Floating AI Desktop Assistant",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linter configured yet'",
    "test:performance": "node test-performance.js",
    "dev:debug": "npm run dev",
    "dev:performance": "npm run dev -- --enable-logging --remote-debugging-port=9222",
    "start:laptop-safe": "npm run dev",
    "start:emergency": "npm run dev -- --emergency-mode",
    "install:ollama": "npm install -g ollama",
    "start:ollama": "ollama serve",
    "pull:models": "ollama pull phi && ollama pull mistral && ollama pull llama2"
  },
  "keywords": [
    "ai",
    "desktop",
    "assistant",
    "productivity",
    "automation"
  ],
  "author": "Doppel Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "autoprefixer": "^10.4.16",
    "axios": "^1.10.0",
    "chokidar": "^3.5.3",
    "clipboardy": "^3.0.0",
    "dotenv": "^17.0.0",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.294.0",
    "node-global-key-listener": "^0.1.1",
    "node-schedule": "^2.1.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "sql.js": "^1.9.0",
    "tailwindcss": "^3.3.6",
    "screenshot-desktop": "^1.12.7",
    "node-record-lpcm16": "^1.0.1",
    "node-wit": "^6.5.0",
    "ws": "^8.14.2",
    "node-cron": "^3.0.3",
    "memory-cache": "^0.2.0",
    "glob": "^10.3.10",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "conf": "^10.1.0",
    "electron-store": "^8.1.0",
    "node-notifier": "^10.0.1",
    "systeminformation": "^5.21.23",
    "ps-list": "^8.0.0",
    "node-key-sender": "^1.0.11"
  },
  "build": {
    "appId": "com.doppel.assistant",
    "productName": "Doppel",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    }
  }
}
