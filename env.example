# Doppel AI Assistant - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Azure OpenAI Configuration (Required for AI features)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_API_VERSION=2024-04-01-preview

# OpenAI Configuration (Alternative to Azure)
OPENAI_API_KEY=your_openai_api_key_here

# Google API Configuration (Optional - for enhanced search and Gmail integration)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Slack API Configuration (Optional - for Slack messaging)
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here

# Debug Mode (Set to true for detailed logging)
DEBUG_MODE=false

# Development Mode
NODE_ENV=development 